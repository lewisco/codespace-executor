{
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {}
    },
    "postCreateCommand": "npm install",
    "postStartCommand": "npm run dev",
    "forwardPorts": [3000, 3001, 3002, 11434, 4002],
    "portsAttributes": {
        "3000": {
            "label": "HTTP Server"
        },
        "3001": {
            "label": "XFCE Desktop (Web)"
        },
        "3002": {
            "label": "XFCE Desktop (VNC)"
        },
        "4002": {
            "label": "WebSocket Server"
        },
        "11434": {
            "label": "Ollama API"
        }
    },
    "containerEnv": {
        "ENABLE_XFCE_DESKTOP": "true"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "anthropic.claude-code"
            ]
        }
    }
}
